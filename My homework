from pynput import keyboard

def on_press(key):
  if key == keyboard.Key.upArrow:
    print("Move forward")
  if key == keyboard.Key.downArrow:
    print("Move backward")
  if key == keyboard.Key.LeftArrow:
    print("Turn left")
  if key == keyboard.Key.RightArrow:
    print("Turn right")
def on_release(key):
  if key == keyboard.Key.esc:
    return False
listener = keyboard.Listener(
on_press=on_press,
on_release=on_release)
listener.start()
listener.join()
print("Program ended")
